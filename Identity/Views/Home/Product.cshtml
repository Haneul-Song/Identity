@model ProductsListViewModel

<style>
    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: rgba(0,0,0,.05); /* Add a background color to odd rows */
    }

    .table-striped > tbody > tr:nth-of-type(even) {
        background-color: #fff; /* Add a background color to even rows */
    }

    .table-striped > tbody > tr > td,
    .table-striped > tbody > tr > th {
        border: 1px solid #dee2e6; /* Add border to table cells */
    }

    .table-striped > thead > tr > th {
        border-bottom-width: 2px; /* Add border to table header */
    }

    .table-striped {
        border-collapse: collapse; /* Collapse table borders */
        width: 100%; /* Set table width to 100% */
    }

    .table-responsive {
        overflow-x: auto;
    }

    .full-width-table {
        margin-left: -50px;
        margin-right: 0;
    }

    .table {
        width: auto;
        margin-bottom: 0;
    }

    .prediction-cell {
        background-color: #e0f2f1;
    }


</style>

<h2>Products</h2>
<h5>Show all the products</h5>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Image</th>
            <th>Name</th>
            <th>Year</th>
            <th>Pieces</th>
            <th>Price</th>
            <th>Primary Color</th>
            <th>Secondary Color</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product p in Model.Products)
        {
            <partial name="ProductSummary" model ="p" />
        }
    </tbody>
</table>

<div page-model="@Model.PaginationInfo" page-action="Product" page-classes-enabled="true" page-class="btn" 
    page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group"></div>
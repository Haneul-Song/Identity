@model IQueryable<ProductRecommendation>
@{
    ViewData["Title"] = "Product Recommendations";
}

<style>
    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: rgba(0,0,0,.05); /* Add a background color to odd rows */
    }

    .table-striped > tbody > tr:nth-of-type(even) {
        background-color: #fff; /* Add a background color to even rows */
    }

    .table-striped > tbody > tr > td,
    .table-striped > tbody > tr > th {
        border: 1px solid #dee2e6; /* Add border to table cells */
    }

    .table-striped > thead > tr > th {
        border-bottom-width: 2px; /* Add border to table header */
    }

    .table-striped {
        border-collapse: collapse; /* Collapse table borders */
        width: 100%; /* Set table width to 100% */
    }

    .table-responsive {
        overflow-x: auto;
    }

    .full-width-table {
        margin-left: -50px;
        margin-right: 0;
    }

    .table {
        width: auto;
        margin-bottom: 0;
    }

    .prediction-cell {
        background-color: #e0f2f1;
    }

</style>

<h2>Product Recommendations</h2>
<h5>Show all the Product Recommendations</h5>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Recommendation 1</th>
            <th>Recommendation 2</th>
            <th>Recommendation 3</th>
            <th>Recommendation 4</th>
            <th>Recommendation 5</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProductRecommendation pr in Model)
        {
            <tr>
                <td>@pr.product_id</td>
                <td>@pr.product_name</td>
                <td>@pr.recommendation_1</td>
                <td>@pr.recommendation_2</td>
                <td>@pr.recommendation_3</td>
                <td>@pr.recommendation_4</td>
                <td>@pr.recommendation_5</td>
            </tr>
        }
    </tbody>
</table>

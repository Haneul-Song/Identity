@model IQueryable<Order>
@{
    ViewData["Title"] = "Order";
}
<style>
    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: rgba(0,0,0,.05); /* Add a background color to odd rows */
    }

    .table-striped > tbody > tr:nth-of-type(even) {
        background-color: #fff; /* Add a background color to even rows */
    }

    .table-striped > tbody > tr > td,
    .table-striped > tbody > tr > th {
        border: 1px solid #dee2e6; /* Add border to table cells */
    }

    .table-striped > thead > tr > th {
        border-bottom-width: 2px; /* Add border to table header */
    }

    .table-striped {
        border-collapse: collapse; /* Collapse table borders */
        width: 100%; /* Set table width to 100% */
    }

    .table-responsive {
        overflow-x: auto;
    }

    .full-width-table {
        margin-left: -50px;
        margin-right: 0;
    }

    .table {
        width: auto;
        margin-bottom: 0;
    }

    .prediction-cell {
        background-color: #e0f2f1;
    }

</style>

<h2>Orders</h2>
<h5>Show all the Orders</h5>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Transaction ID</th>
            <th>Customer ID</th>
            <th>Date</th>
            <th>Day of Order</th>
            <th>Time</th>
            <th>Entry Mode</th>
            <th>Amount</th>
            <th>Transaction Type</th>
            <th>Transaction Country</th>
            <th>Shipping To</th>
            <th>Bank</th>
            <th>Card Type</th>
            <th>Fraud</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Order o in Model)
        {
            <tr>
                <td>@o.transaction_ID</td>
                <td>@o.customer_ID</td>
                <td>@(o.date?.ToString("MM/dd/yyyy") ?? "N/A")</td>
                <td>@o.day_of_week</td>
                <td>@o.time</td>
                <td>@o.entry_mode</td>
                <td>@o.amount</td>
                <td>@o.type_of_transaction</td>
                <td>@o.country_of_transaction</td>
                <td>@o.shipping_address</td>
                <td>@o.bank</td>
                <td>@o.type_of_card</td>
                <td>@o.fraud</td>

            </tr>
        }
    </tbody>
</table>

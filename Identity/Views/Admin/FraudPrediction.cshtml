@using Microsoft.EntityFrameworkCore.Metadata.Internal


@model IEnumerable<Identity.Models.FraudPrediction>
@{
    ViewData["Title"] = "Predictions";
    var classTypeDict = new Dictionary<int, string>
    {
        { 0, "Not Fraud" },
        { 1, "Fraud" }
    };
}
<style>
    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: rgba(0,0,0,.05); /* Add a background color to odd rows */
    }

    .table-striped > tbody > tr:nth-of-type(even) {
        background-color: #fff; /* Add a background color to even rows */
    }

    .table-striped > tbody > tr > td,
    .table-striped > tbody > tr > th {
        border: 1px solid #dee2e6; /* Add border to table cells */
    }

    .table-striped > thead > tr > th {
        border-bottom-width: 2px; /* Add border to table header */
    }

    .table-striped {
        border-collapse: collapse; /* Collapse table borders */
        width: 100%; /* Set table width to 100% */
    }

    .table-responsive {
        overflow-x: auto;
    }

    .full-width-table {
        margin-left: -50px;
        margin-right: 0;
    }

    .table {
        width: auto;
        margin-bottom: 0;
    }

    .prediction-cell {
        background-color: #e0f2f1;
    }
</style>
<h2>Fraud predictions on all orders</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>TransactionId</th>
            <th>CustomerId</th>
            <th>Date</th>
            <th>Day Of The Week</th>
            <th>Time (Military Time)</th>
            <th>Entry Mode</th>
            <th>Amount</th>
            <th>Type Of Transaction</th>
            <th>Country Of Transaction</th>
            <th>Shipping Address</th>
            <th>Bank</th>
            <th>Type Of Card</th>
@*             <th>Fraud</th>
 *@            <th class="prediction-cell">Fraud Prediction</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Order.transaction_ID</td>
                <td>@item.Order.customer_ID</td>
                <td>@item.Order.date</td>
                <td>@item.Order.day_of_week</td>
                <td>@item.Order.time</td>
                <td>@item.Order.entry_mode</td>
                <td>@item.Order.amount</td>
                <td>@item.Order.type_of_transaction</td>
                <td>@item.Order.country_of_transaction</td>
                <td>@item.Order.shipping_address</td>
                <td>@item.Order.bank</td>
                <td>@item.Order.type_of_card</td>
@*                 <td>@item.Order.fraud</td>
 *@                <td class="prediction-cell">@item.Prediction</td>
            </tr>
        }
    </tbody>
</table>